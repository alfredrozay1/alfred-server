pipeline {
	agent any

    environment {
		DOCKERHUB_CREDENTIALS=credentials('alfredrozay')
	}

	stages {
		stage("GitHub Checkout") {
			steps {
				git branch: 'main', url: 'https://github.com/alfredrozay1/alfred-server.git'
			}
		}

		stage("Docker Build") {
			steps {
				sh "docker image build -t alfredrozay/alfred ."
			}
		}

		stage("Authenticate to DockerHub") {
			steps {
				echo 'Authenticating...'
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
				echo 'Login complete...'
			}
		}

		stage("Push to DockerHub") {
			steps {
				echo "pushing image to dockerhub"
			}
		}

        stage("Logout") {
			steps{
				sh 'docker image rmi -f $(docker image ls -aq)'
				sh 'docker logout'
				echo 'Logout successful!'
			}

	}

}